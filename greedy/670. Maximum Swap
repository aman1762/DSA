class Solution {
public:
    int maximumSwap(int num) {
        int maxidx=-1,maxnum=-1,leftidx=-1,rightidx=-1;

        string s=to_string(num);

        for(int i=s.size()-1;i>=0;i--)
        {
            if(s[i]>maxnum)
            {
                maxnum=s[i];
                maxidx=i;
                
                continue;
            }

            if(s[i]<maxnum)
            {
                leftidx=i;
                rightidx=maxidx;
            }
        }

        if(leftidx==-1)
        return num;

        swap(s[leftidx],s[rightidx]);
        return stoi(s);


        
    }
};
